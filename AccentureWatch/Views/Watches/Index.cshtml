@model IEnumerable<AccentureWatch.Models.Watch>

@{
    ViewData["Title"] = "Watches";
}



<div class="row">
    <div class="col">
        @* <h5>Watches</h5>*@
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">Watches</li>
            </ol>
        </nav>
    </div>

    <div class="col">
        <p class="float-end">
          @*  <a asp-action="Add" class="btn btn-success btn-sm">Create New</a>*@
            <a href="@Url.Action("Add","Watches")" class="btn btn-success btn-sm">Create New</a>
        </p>
    </div>

</div>




<div class="container text-center">
    <div class="row align-items-start">
        @foreach (var item in Model)
        {
            <div class="col" style="padding-bottom:20px;">
                <div class="card" style="width: 18rem;">
                    <img src="@Html.Raw(item.URL)" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h6 class="card-title">@item.ItemName</h6>
                        <p class="card-text">@item.FullDescription</p>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="btn btn-success btn-sm">Details</a>
                        <a href="#" class="btn btn-primary btn-sm">Update</a>
                        <a href="" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


