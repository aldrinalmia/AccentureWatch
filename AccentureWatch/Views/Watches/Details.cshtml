                                    @Model.ItemName
                                </span>
                            </h6>
                            <blockquote style="margin: 0px !important">
                                <span class="d-inline-block text-truncate" style="max-width: 200px; font-size:medium">
                                    @Model.ShortDescription
                                </span>
                            </blockquote>
                            <blockquote style="margin:0px !important">
                                <label style="font-size:small">฿@string.Format($"{Model.Price:n}")</label>
                            </blockquote>
                        </div>*@
                    </div>
                </div>

            </div>
        </div>
        <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">

            <div class="row" style="padding-top:10px; padding-left:5px;">
                <div class="col-12">
                    <dl class="row" style="font-size:15px;">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ShortDescription)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ShortDescription)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.FullDescription)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FullDescription)
                        </dd>

                    </dl>
                </div>
            </div>


        </div>
     
    </div>
</div>



